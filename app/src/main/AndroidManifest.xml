<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jschdev.momentos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--
    uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission
    -->
    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:name="com.jschdev.momentos.acra.MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jschdev.momentos.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.jschdev.momentos.Video.newVideo.DetalleVideoActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.jschdev.momentos.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jschdev.momentos.Galeria.DetalleGaleriaActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar" />

        <activity
            android:name="com.jschdev.momentos.ConfigActivity"
            android:label="@string/txt_activity_config"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
